section#clients.section.section--clients
  .section__content.section__content--fluid-width
    h2.section__title.section__title--centered=t(locale, 'clients.title')
    .section__description.section__description--centered
    .grid.grid--5col
      each client in clients
        .grid__item
          .grid__client-logo
              img(src=client.logo alt=client.name)
  svg.svg-clients-top(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 100 100' preserveaspectratio='none')
    path(d='M0,30 L100,0 0,0 Z' fill='#f7f8f9')
  svg.svg-cta-top(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 100 100' preserveaspectratio='none')
    path(d='M0,100 L100,70 100,100 Z' fill='#f7f8f9')